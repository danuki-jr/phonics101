{# inputs:
    timerName: the name of the timer (i.e. practice, fluency or test)
#}

{% macro timerButton(tab, style, action) %}
    <div id="{{ tab }}{{ action|capitalize }}Button" class="btn btn-outline-{{ style }} col-9 m-1 btn-sm" >{{ action|capitalize }}</div>
{% endmacro %}

{% macro timerText(tab) %}
    <div class="row">
        <div id="{{ tab }}Time" class="tac col-sm-10 col-12">00:00</div>
    </div>
{% endmacro %}

{# inputs: action #}
{% block testTimer %}
    {% set tab = 'test' %}
    <div class="container mx-0 px-0">
        <div class="row d-flex flex-wrap justify-content-center">
            {{ _self.timerButton(tab, 'success', 'start') }}
            {{ _self.timerButton(tab, 'danger', 'stop') }}
            {{ _self.timerButton(tab, 'warning', 'reset') }}
            {{ _self.timerButton(tab, 'info', 'save') }}
        </div>
        {{ _self.timerText(tab) }}
        <div class="row">
            <form name="testMasteryForm" id="testMasteryForm" data-ajax="false" method="post" action="/timer">
                <div class="d-flex flex-wrap">
                <input class="col" type="hidden" name="masteryType" value="" />
                <input class="col" type="hidden" name="testWords" value="" />
                <input class="col" type="hidden" name="source" value="testMastery"/>
                </div>
            </form>
        </div>
    </div>

{% endblock %}

{# inputs: action #}
{% block testButtons %}
    {% set btnSz = 'col-9 m-1 btn-sm' %}
    <div class="container mx-0 px-0">
        <div class="row d-flex flex-wrap justify-content-center">
            <button id="testAdvancingButton" class="btn btn-outline-info {{ btnSz }}"
                    data-toggle="tooltip" data-placement="left"
                    title="Press to indicate that the student is advancing but has not yet mastered the lesson">Advancing
            </button>
            <button id="testMasteredButton" class="btn btn-outline-info {{ btnSz }}"
                    data-toggle="tooltip" data-placement="left"
                    title="Press to indicate that the student has mastered the lesson">Mastered
            </button>
        </div>
    </div>
    <form name="testTimerForm" id="testTimerForm" data-ajax="false" method="post" action="{{ action }}">
        <input type="hidden" name="seconds" value=0 />
        <input type="hidden" name="source" value="test"/>
    </form>
{% endblock %}


{# inputs: action #}
{% block fluencyTimer %}
    {% set tab = 'fluency' %}
    <div class="container">
        <div class="row d-flex flex-wrap justify-content-center">
            {{ _self.timerButton(tab, 'success', 'start') }}
            {{ _self.timerButton(tab, 'danger', 'stop') }}
            {{ _self.timerButton(tab, 'warning', 'reset') }}
            {{ _self.timerButton(tab, 'info', 'save') }}
        </div>
        {{ _self.timerText(tab) }}
    </div>

    <form name="fluencyTimerForm" id="fluencyTimerForm" data-ajax="false" method="post" action="{{ action }}">
        <input type="hidden" name="seconds" value=0/>
        <input type="hidden" name="source" value="fluency"/>
    </form>
{% endblock %}

{# inputs: none#}
{% block practiceTimer %}
    {% set tab = 'practice' %}
    <div class="container mx-0 px-0">
        <div class="row d-flex flex-wrap justify-content-center">
            {{ _self.timerButton(tab, 'success', 'start') }}
            {{ _self.timerButton(tab, 'danger', 'stop') }}
            {{ _self.timerButton(tab, 'warning', 'reset') }}
            <div class="{{ btnSz }}"></div>
        </div>
        {{ _self.timerText(tab) }}
    </div>
{% endblock %}
